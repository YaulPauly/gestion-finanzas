# Spring Boot datasource configuration for local development
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/finanzas_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Hibernate configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect

# JWT secret used for signing tokens (replace in production)
JWT_SECRET=my_super_secret_jwt_key_1234567890123456
